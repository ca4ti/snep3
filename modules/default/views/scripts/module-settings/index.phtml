        var allModules = "<?php echo $this->allModules ?>";
        jQuery(allModules).click(function() {

            // Toggle clicked element
            if(jQuery(this).hasClass('add_field')) {
                jQuery(this).removeClass('boxadd add_field').addClass('boxremove del_field') ;
            } else {
                jQuery(this).removeClass('boxremove del_field').addClass('boxadd add_field') ;
            }
            // Togle other elements
            var sel=jQuery(this).attr('id') ;
            var arr = [allModules] ;
            var list = arr.splice(arr.indexOf(sel),1);
            jQuery.each(arr,function(index,value){
                var pid = jQuery('#'+value).parent().attr('href') ;
                var flag = false ;
                if (jQuery(pid).hasClass('in')) {
                    flag = true ;
                }
                if(flag) {
                    if (jQuery('#'+value).hasClass('del_field')) {
                        jQuery('#'+value).removeClass('boxremove del_field').addClass('boxadd add_field') ;
                    } else {
                        jQuery('#'+value).removeClass('boxadd add_field').addClass('boxremove del_field') ;
                    }
                }
            });
        });
        // Start - Compose userfield name
        // IMPORTANT - verify:
        // - agi/snep.php
        // - lib/Snep/ModuleSettings/Manager.php
        // - modules/default/controllers/ModuleSettingsController.php

        // Constants controller
        jQuery("input[name='usrfld[]']").change(function(){
            if (jQuery(this).is(':checked')) {
                jQuery('input[name="default_x_userfield"]').val(jQuery('input[name="default_x_userfield"]').val()+jQuery(this).val());
            } else {
                var replit = jQuery('input[name="default_x_userfield"]').val().replace(jQuery(this).val(),"");
                jQuery('input[name="default_x_userfield"]').val(replit);
            }
            // Example result
            formata_userfield_example() ;
        });
        //Hifem and Underline controllers
        jQuery("#add_default_x_hifem").click(function(){
            jQuery('input[name="default_x_userfield"]').val(jQuery('input[name="default_x_userfield"]').val()+"-");
        });
        jQuery("#del_default_x_hifem").click(function(){
            var str=jQuery('input[name="default_x_userfield"]').val();
            str = str.replace(/-([^-]*)$/,'$1');
            jQuery('input[name="default_x_userfield"]').val(str);
        });
        jQuery("#add_default_x_underline").click(function() {
            jQuery('input[name="default_x_userfield"]').val(jQuery('input[name="default_x_userfield"]').val()+"_");
        });
        jQuery("#del_default_x_underline").click(function(){
            var str=jQuery('input[name="default_x_userfield"]').val();
            str = str.replace(/_([^_]*)$/,'$1');
            jQuery('input[name="default_x_userfield"]').val(str);
        });

        function formata_userfield_example() {
            // Example result
            var d = new Date();
            var arr = { TS : Date.now(),
                AA : d.getFullYear(),
                MM : ("0" + (d.getMonth() + 1)).slice(-2),
                DD : d.getDate(),
                HH : d.getHours(),
                ii : d.getMinutes(),
                SR : "1001",
                DS : "4839548000",
                UD : jQuery('input[name=default_x_userfield_ud]').val(),
            } ;
            var result = jQuery('input[name="default_x_userfield"]').val();

            jQuery.each(arr, function (index, value) {
                result = result.replace(index,value) ;
            });
            jQuery('input[name="default_x_userfield_example"]').val(result);
        }
        // End - Compose userfield name
    });

</script>
