    Description:
        Snep Form specification for extensions controller
-->

<form>
    <extension>
        <elements>
            <exten>
                <type>Text</type>
                <options>
                    <label>Extension</label>
                </options>
            </exten>
            <password>
                <type>Password</type>
                <options>
                    <label>Password</label>
                </options>
            </password>
            <name>
                <type>Text</type>
                <options>
                    <label>Name</label>
                </options>
            </name>
            <exten_group>
                <type>ExtensionGroup</type>
                <options>
                    <label>Extension Group</label>
                    <value>users</value>
                </options>
            </exten_group>
            <pickup_group>
                <type>PickupGroup</type>
                <options>
                    <label>Pickup Group</label>
                </options>
            </pickup_group>
        </elements>
    </extension>
    <technology>
        <elements>
            <type>
                <type>Select</type>
                <options>
                    <label>Type</label>
                    <multioptions>
                        <sip>SIP</sip>
                        <iax2>IAX2</iax2>
                        <khomp>Khomp</khomp>
                        <virtual>Virtual</virtual>
                        <manual>Manual</manual>
                    </multioptions>
                </options>
            </type>
        </elements>
    </technology>
    <advanced>
        <elements>
            <voicemail>
                <type>MultiCheckbox</type>
                <options>
                    <label>Voicemail</label>
                    <multioptions>
                        <option>Enabled</option>
                    </multioptions>
                </options>
            </voicemail>
            <email>
                <type>Text</type>
                <options>
                    <label>E-Mail</label>
                    <validators>
                        <EmailAddress>EmailAddress</EmailAddress>
                    </validators>
                </options>
            </email>

            <padlock>
                <type>MultiCheckbox</type>
                <options>
                    <label>Padlock</label>
                    <multioptions>
                        <option>Enabled</option>
                    </multioptions>
                </options>
            </padlock>
            
            <minute_control>
                <type>MultiCheckbox</type>
                <options>
                    <label>Minute Control</label>
                    <multioptions>
                        <option>Enabled</option>
                    </multioptions>
                </options>
            </minute_control>
            
            <timetotal>
                <type>Text</type>
                <value>0</value>
                <options>
                    <label>Time Total</label>
                    <description>Minutes</description>
                    <validators>
                        <regex>
                            <validator>regex</validator>
                            <options>
                                <pattern>/[[:digit:]]/i</pattern>
                                <messages>
                                    <regexNotMatch>This field should contain numbers only</regexNotMatch>
                                </messages>
                            </options>
                        </regex>
                    </validators>
                </options>
            </timetotal>
            
            <controltype>
                <type>radio</type>
                <options>
                    <label>Control Type</label>
                    <separator> </separator>
                    <multioptions>
                        <Y>Anually</Y>
                        <M>Monthly</M>
                        <D>Daily</D>
                    </multioptions>
                </options>
            </controltype>
            
        </elements>
    </advanced>
    <ip>
        <elements>
            <password>
                <type>Password</type>
                <options>
                    <label>Password</label>
                </options>
            </password>
            <calllimit>
                <type>Text</type>
                <options>
                    <label>Simultaneous Call Limit</label>
                    <description>Numbers Only</description>
                    <validators>
                        <regex>
                            <validator>regex</validator>
                            <options>
                                <pattern>/[[:digit:]]/i</pattern>
                                <messages>
                                    <regexNotMatch>This field should contain numbers only</regexNotMatch>
                                </messages>
                            </options>
                        </regex>
                    </validators>
                </options>
            </calllimit>
            <nat>
                <type>MultiCheckbox</type>
                <options>
                    <label>NAT</label>
                    <multioptions>
                        <enable>Enable NAT</enable>
                    </multioptions>
                </options>
            </nat>
            <qualify>
                <type>MultiCheckbox</type>
                <options>
                    <label>Qualify</label>
                    <multioptions>
                        <option>Enable delay qualification</option>
                    </multioptions>
                </options>
            </qualify>
            <directmedia>
                <type>radio</type>
                <options>
                    <label>Direct Media</label>
                    <value>yes</value>
                    <separator> </separator>
                    <multioptions>
                        <yes>yes</yes>
                        <no>no</no>
                    </multioptions>
                </options>
            </directmedia>
            <type>
                <type>radio</type>
                <options>
                    <label>Type</label>
                    <value>peer</value>
                    <separator> </separator>
                    <multioptions>
                        <peer>Peer</peer>
                        <friend>Friend</friend>
                    </multioptions>
                </options>
            </type>
            <dtmf>
                <type>radio</type>
                <options>
                    <label>DTMF Mode</label>
                    <value>rfc2833</value>
                    <separator> </separator>
                    <multioptions>
                        <rfc2833>RFC-2833</rfc2833>
                        <inband>Inband</inband>
                        <info>Info</info>
                    </multioptions>
                </options>
            </dtmf>
            <codec>
                <type>codec</type>
                <options>
                    <value>ulaw</value>
                    <label>Codec 1</label>
                    <description>Prioritary</description>
                </options>
            </codec>
            <codec1>
                <type>codec</type>
                <options>
                    <value>alaw</value>
                    <label>Codec 2</label>
                </options>
            </codec1>
            <codec2>
                <type>codec</type>
                <options>
                    <value>ilbc</value>
                    <label>Codec 3</label>
                </options>
            </codec2>
        </elements>
    </ip>
    <manual>
        <elements>
            <manual>
                <type>Text</type>
                <options>
                    <label>Manual</label>
                </options>
            </manual>
        </elements>
    </manual>
    <virtual>
        <elements>
            <virtual>
                <type>Trunk</type>
                <options>
                    <label>Trunk</label>
                </options>
            </virtual>
        </elements>
    </virtual>
    <khomp>
        <elements>
            <board>
                <type>Select</type>
                <options>
                    <label>Board</label>
                </options>
            </board>
            <channel>
                <type>Select</type>
                <options>
                    <label>Channel</label>
                </options>
            </channel>
        </elements>
    </khomp>
</form>
