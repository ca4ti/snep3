<?xml version="1.0" encoding="UTF-8"?>
<modelo>
    <elements>
        <name>
            <type>text</type>
            <options>
                <label>Name</label>
                <required>true</required>
                <validators>
                    <alnum>
                        <validator>Alnum</validator>
                        <options>
                            <allowWhiteSpace>true</allowWhiteSpace>
                        </options>
                    </alnum>
                </validators>
            </options>
        </name>
        <password>
            <type>Password</type>
            <options>
                <label>Password</label>
                <required>true</required>
            </options>
        </password>
        <email>
            <type>Text</type>
            <options>
                <label>Email</label>
                <required>true</required>
                <validators>
                    <regex>
                        <validator>regex</validator>
                        <options>
                            <pattern>/^[A-Z0-9._%+-]+@[A-Z0-9.-]+\.[A-Z]{2,6}$/i</pattern>
                            <messages>
                                <regexNotMatch>This email is not valid</regexNotMatch>
                            </messages>
                        </options>
                    </regex>
                </validators>
            </options>
        </email>
        <group>
            <type>select</type>
            <options>
                <required>true</required>
                <label>Group</label>
            </options>
        </group>
    </elements>
</modelo>

