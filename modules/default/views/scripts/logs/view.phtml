    jQuery.noConflict();
    jQuery("input:radio[name=modo]").click(function(){
        var value = jQuery(this).val() ;
        switch(value) {
            case "normal":

              jQuery('#data').removeClass('terminal');
              jQuery('#data').removeClass('contraste');
              jQuery('#data').addClass('normal');
              break;
            case "terminal":

              jQuery('#data').removeClass('normal');
