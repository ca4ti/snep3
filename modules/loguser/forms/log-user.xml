<?xml version="1.0" encoding="UTF-8"?>
<modelo>
    <general>
        <elements>
            <init_day>
                <type>text</type>
                <options>
                    <label>Periodo</label>
                    <required>true</required>
                    <description>dd/mm/yyyy hh:mm</description>

                    <validators>
                    <regex>
                        <validator>regex</validator>
                        <options>
                            <messages>
                                <regexNotMatch>'%value%' não é uma data válida, o formato é dd/mm/aaaa hh:mm.</regexNotMatch>
                            </messages>
                            <pattern>#^(0[1-9]|1\d|2\d|3[01])/(0[1-9]|1\d|2\d|3[01])/(19|20)\d{2}\s+(0[0-9]|1[0-9]|2[0-3])\:(0[0-9]|[1-5][0-9])$#</pattern>
                        </options>
                    </regex>
                    <strlen>
                        <validator>StringLength</validator>
                        <options>
                            <min>10</min>
                            <max>16</max>
                        </options>
                    </strlen>
                </validators>
                </options>
            </init_day>

            <end_day>
                <type>text</type>
                <options>
                    <required>true</required>
                    <label>Até</label>
                    <description>dd/mm/yyyy hh:mm</description>
                    <validators>
                    <regex>
                        <validator>regex</validator>
                        <options>
                            <messages>
                                <regexNotMatch>'%value%' não é uma data válida, o formato é dd/mm/aaaa hh:mm.</regexNotMatch>
                            </messages>
                            <pattern>#^(0[1-9]|1\d|2\d|3[01])/(0[1-9]|1\d|2\d|3[01])/(19|20)\d{2}\s+(0[0-9]|1[0-9]|2[0-3])\:(0[0-9]|[1-5][0-9])$#</pattern>
                        </options>
                    </regex>
                    <strlen>
                        <validator>StringLength</validator>
                        <options>
                            <min>10</min>
                            <max>16</max>
                        </options>
                    </strlen>
                </validators>
                </options>

            </end_day>
	    <status>
		<type>Select</type>
		<options>
                    <label>Status</label>
                   <required>true</required>
		   <separator></separator>
	           <multioptions>
                           <TODOS>Todos</TODOS>
			   <REGRA>Regras</REGRA>
			   <TRONCO>Troncos</TRONCO>
                           <TARIFAS>Tarifas</TARIFAS>
                           <PARAMETRO>Parametros</PARAMETRO>
			   <CC>Centro de Custos</CC>
                           <RAMAL>Ramal</RAMAL>
                           <FILA>Filas</FILA>
                           <SOM>Arquivos de som</SOM>
                           <EXP>Expressão Regular</EXP>
                           <GRAMAL>Grupo de Ramal</GRAMAL>
                    </multioptions>
		</options>
	    </status>
        </elements>
    </general>
</modelo>
