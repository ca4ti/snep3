<?xml version="1.0" encoding="UTF-8"?>
<modelo>
    <attribs>
        <id>contactsForm</id>
    </attribs>
    <elements>
        <id>
            <type>text</type>
            <options>
                <label>Code</label>
                <required>true</required>
            </options>
        </id>
        <name>
            <type>text</type>
            <options>
                <label>Name</label>
                <required>true</required>
                <validators>
                    <alnum>
                        <validator>Alnum</validator>
                        <options>
                            <allowWhiteSpace>true</allowWhiteSpace>
                        </options>
                    </alnum>
                </validators>
            </options>
        </name>
        <group>
            <type>select</type>
            <options>
                <required>true</required>
                <label>Group</label>
            </options>
        </group>
        <address>
            <type>text</type>
            <options>
                <label>Address</label>
            </options>
        </address>
        <city>
            <type>text</type>
            <options>
                <label>City</label>
            </options>
        </city>
        <state>
            <type>select</type>
            <options>
                <required>true</required>
                <label>State</label>
            </options>
        </state>
        <zipcode>
            <type>text</type>
            <options>
                <label>Zip Code</label>
                <description>Numbers only</description>
                <validators>
                    <regex>
                        <validator>regex</validator>
                        <options>
                            <pattern>/^[0-9]{2}.[0-9]{3}-[0-9]{3}$/</pattern>
                            <messages>
                                <regexNotMatch>This field should contain numbers only</regexNotMatch>
                            </messages>
                        </options>
                    </regex>
                    <strlen>
                    <validator>StringLength</validator>
                    <options>
                        <min>10</min>
                        <max>10</max>
                    </options>
                </strlen>
                </validators>
            </options>
        </zipcode>
    </elements>
</modelo>
